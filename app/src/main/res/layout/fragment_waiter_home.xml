        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/waiterhome_textView_createNewOrder"
        android:textSize="16sp"
        android:padding="10dp"
        />

</LinearLayout>