<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/single_order_textView_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView "
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/single_order_textView_price"
        android:layout_alignBottom="@+id/single_order_textView_price"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/single_order_textView_price"
        android:layout_toStartOf="@+id/single_order_textView_price" />
    <TextView
        android:id="@+id/single_order_textView_price"
        android:text="-.--â‚¬"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/single_order_button_decrease"
        android:layout_toLeftOf="@+id/single_order_textView_quantity"
        android:layout_toStartOf="@+id/single_order_textView_quantity"
        />
    <TextView
        android:id="@+id/single_order_textView_quantity"
        android:text="1"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignBaseline="@+id/single_order_button_decrease"
        android:layout_alignBottom="@+id/single_order_button_decrease"
        android:layout_toLeftOf="@+id/single_order_button_decrease"
        android:layout_toStartOf="@+id/single_order_button_decrease" />


    <Button
        android:text="-"
        android:id="@+id/single_order_button_decrease"
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/single_order_button_increase"
        android:layout_toStartOf="@+id/single_order_button_increase" />
    <Button
        android:id="@+id/single_order_button_increase"
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/single_order_button_remove"
        android:layout_toStartOf="@+id/single_order_button_remove"
        android:text="+" />

    <Button
        android:id="@+id/single_order_button_remove"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Remove"
        android:textColor="#ff0000"/>

</RelativeLayout>